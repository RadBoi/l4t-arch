# Maintainer: Your Name <youremail@domain.com>
pkbase=ffmpeg
pkgname=ffmpeg
pkgver=4
pkgrel=2-nx
epoch=
pkgdesc=""
arch=(any)
url="https://github.com/jocover/jetson-ffmpeg"
license=('GPL')
depends=(jetson-ffmpeg)
install=
source=(git+git://source.ffmpeg.org/ffmpeg.git)
sha256sums=(SKIP SKIP SKIP)
noextract=()
validpgpkeys=()
_branch=release/4.2

prepare() {
	cd "${pkgbase}"
	git checkout ${_branch} --depth=1
	wget https://github.com/jocover/jetson-ffmpeg/raw/master/ffmpeg_nvmpi.patch
	git apply ffmpeg_nvmpi.patch
}

build() {
	./configure --enable-nvmpi
	make
}

package() {
	make install
	ldconfig
}
