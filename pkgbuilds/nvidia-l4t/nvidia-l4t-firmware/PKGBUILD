pkgname=nvidia-l4t-firmware
pkgbase=nvidia-l4t-firmware
pkgver=R32
pkgrel=3.1
arch=('aarch64')
license=('GPL')
url="http://nvidia.com"
source=(https://developer.nvidia.com/embedded/dlc/r32-3-1_Release_v1.0/t210ref_release_aarch64/Tegra210_Linux_${pkgver}.${pkgrel}_aarch64.tbz2)
sha256sums=('SKIP')
makedepends=('binutils')

prepare() {
  mv Linux_for_Tegra/nv_tegra/l4t_deb_packages/${pkgname}* .
}

package() {
  ar x *.deb 
  for f in *.tar*; do tar xf "$f"; done
  find . -maxdepth 1 -type f -delete
  cp -pr ${srcdir}/lib/ ${srcdir}/usr/
  rm -r ${srcdir}/lib/
  cp -pr ${srcdir}/* ${pkgdir}
}
