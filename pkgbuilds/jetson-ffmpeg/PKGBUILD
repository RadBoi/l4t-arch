pkgname=jetson-ffmpeg
pkgbase=jetson-ffmpeg
pkgver=R32
pkgrel=3.1
arch=('aarch64')
license=('GPL')
url="https://github.com/jocover/jetson-ffmpeg"
source=("https://github.com/jocover/jetson-ffmpeg")
sha256sums=('SKIP')

prepare() {
	git clone https://github.com/jocover/jetson-ffmpeg.git
	mkdir jetson-ffmpeg/build
}

build() {
	cd jetson-ffmpeg/build
	cmake ..
	make
}

package_jetson-ffmpeg() {
	cd jetson-ffmpeg/build
	# make install
	install -m755 libnvmpi.so.1.0.0 ${pkgdir}/usr/lib/libnvmpi.so.1.0.0
	install -m755 libnvmpi.so ${pkgdir}/usr/lib/libnvmpi.so
	install -m755 ../nvmpi.h ${pkgdir}/usr/include/nvmpi.h
	install -m755 nvmpi.pc ${pkgdir}/usr/share/pkgconfig/nvmpi.pc
	ldconfig
}